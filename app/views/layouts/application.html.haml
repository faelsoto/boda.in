%head
  %meta{ :charset => "utf-8" }

  -# Uncomment to make IE8 render like IE7
  -# meta http-equiv="X-UA-Compatible" content="IE=7"
  = javascript_include_tag 'modernizr'

  %title= content_for?(:title) ? yield(:title) : "boda.in"
  %link(href="/favicon.ico" rel="shortcut icon")

  = csrf_meta_tag

  -# Included CSS Files
  = stylesheet_link_tag "application"

%body
  .container
    %header#header
      %h1#bodain
        %a.bgicon.inlineblock{ href: '/'}
          %span boda.in
      #login
        - if user_signed_in?
          = link_to 'Cerrar sesión', destroy_user_session_path, :method => 'delete'
          = current_user.id
      %menu#barra
        %ul.table.mtable.nolist.nobullet
          %li.foto.tcell
            = image_tag 'tmp/foto.jpg'
          %li.datos.tcell
            %h2.pareja
              Diana & Rodrigo
            %h4.fecha
              Diciembre 2012
          %li.progreso.tcell
            %progress( max="100" value="54" )
            %big.gasto
              Hasta ahora te gastarías
              %code
                $54,000.00
      #barrashadow
    #main(role="main")
      = yield

  -# Included JS Files
  = javascript_include_tag "application"
  = yield(:javascripts) if content_for?(:javascripts)
  = render 'base/analytics' if ENV['ANALYTICS_KEY']
